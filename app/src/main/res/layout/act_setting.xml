<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.longrenzhu.common.widget.common.ItemClickWidget
        android:id="@+id/vWidgetAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:zt_title="新建联系人"
        app:zt_notNull="false"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:zt_layoutId="@layout/widget_item_click"/>

    <com.longrenzhu.common.widget.common.ItemClickWidget
        android:id="@+id/vWidgetContactList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:zt_title="联系人列表"
        app:zt_notNull="false"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:zt_layoutId="@layout/widget_item_click"/>

    <com.longrenzhu.common.widget.common.ItemClickWidget
        android:id="@+id/vWidgetAppSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:zt_title="快捷应用设置"
        app:zt_notNull="false"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:zt_layoutId="@layout/widget_item_click"/>

    <com.longrenzhu.common.widget.common.ItemClickWidget
        android:id="@+id/vWidgetSystem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:zt_title="系统功能设置"
        app:zt_notNull="false"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:zt_layoutId="@layout/widget_item_click"/>

    <com.longrenzhu.common.widget.common.ItemClickWidget
        android:id="@+id/vWidgetFzSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:zt_title="辅助功能设置"
        app:zt_notNull="false"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:zt_layoutId="@layout/widget_item_click"/>

    <com.longrenzhu.common.widget.common.ItemClickWidget
        android:id="@+id/vWidgetVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:zt_title="检查更新"
        app:zt_notNull="false"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:zt_layoutId="@layout/widget_item_click"/>


</LinearLayout>